{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "import"],
  "rules": {
    "quotes": ["warn", "double"],
    "semi": ["warn", "never"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "import/no-unresolved": ["error", { "commonjs": true }]
  }
}
